<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>10</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>AvaloniaForms</PackageId>
    <Title>AvaloniaForms</Title>
    <Version>0.7.2</Version>
    <Company>RaisingStudio</Company>
    <Authors>zhongzf</Authors>
    <PackageProjectUrl>https://github.com/zhongzf/Xamarin.Forms.Platform.Avalonia</PackageProjectUrl>
    <RepositoryUrl>https://github.com/zhongzf/Xamarin.Forms.Platform.Avalonia</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/zhongzf/Xamarin.Forms.Platform.Avalonia/blob/master/LICENSE</PackageLicenseUrl>
    <Copyright>Â© 2020 RaisingStudio</Copyright>
    <Description>Avalonia base controls for Xamarin Forms platform.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <Compile Remove="Controls\Generators\ListViewItemContainerGenerator.cs" />
    <Compile Remove="Controls\Generators\**" />
    <AvaloniaResource Remove="Controls\Generators\**" />
  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Remove="Themes\AppBarButton.xaml" />
    <AvaloniaResource Remove="Themes\ApplicationWindow.xaml" />
    <AvaloniaResource Remove="Themes\CarouselPage.xaml" />
    <AvaloniaResource Remove="Themes\CommandBar.xaml" />
    <AvaloniaResource Remove="Themes\ContentDialog.xaml" />
    <AvaloniaResource Remove="Themes\DefaultTheme.xaml" />
    <AvaloniaResource Remove="Themes\ElementIcon.xaml" />
    <AvaloniaResource Remove="Themes\EllipsisButton.xaml" />
    <AvaloniaResource Remove="Themes\Flyout.xaml" />
    <AvaloniaResource Remove="Themes\Global.xaml" />
    <AvaloniaResource Remove="Themes\MasterDetailPage.xaml" />
    <AvaloniaResource Remove="Themes\NavigationPage.xaml" />
    <AvaloniaResource Remove="Themes\PageControl.xaml" />
    <AvaloniaResource Remove="Themes\TabbedPage.xaml" />
    <AvaloniaResource Remove="Themes\TransitioningContentControl.xaml" />
    <AvaloniaResource Remove="Themes\WindowButtons.xaml" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Themes\AppBarButton.xaml" />
